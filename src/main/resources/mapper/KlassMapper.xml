<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="edu.sandau.b230111.b23011111.mapper.KlassMapper">

    <select id="findALL" resultType="edu.sandau.b230111.b23011111.entity.Klass">
        select *
        from Klass
    </select>
    <select id="findALLBySelective" parameterType="edu.sandau.b230111.b23011111.entity.Klass" resultType="edu.sandau.b230111.b23011111.entity.Klass">
        select * from Klass
        <where>
            <if test="name!=null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="major!=null">
                and major like concat('%',#{major},'%')
            </if>
        </where>

    </select>
</mapper>
